{
	"name": "safeword-ts",
	"version": "1.0.0",
	"description": "A library designed to prevent overflows and underflows with types and runtime errors",
	"main": "index.ts",
	"scripts": {
		"test": "jest",
		"test:cov": "jest --coverage",
		"test:dev": "jest --watchAll",
		"coverage": "codecov -f coverage/*.json",
		"coverage:open": "open coverage/lcov-report/index.html",
		"build": "tsc --build tsconfig.json",
		"lint": "node_modules/.bin/tslint -c tslint.json '*/*.ts'",
		"compile": "tsc -p ."
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/JonathanLorimer/safeword-ts.git"
	},
	"author": "Jonathan Lorimer",
	"license": "GPL-3.0-or-later",
	"bugs": {
		"url": "https://github.com/JonathanLorimer/safeword-ts/issues"
	},
	"homepage": "https://github.com/JonathanLorimer/safeword-ts#readme",
	"dependencies": {
		"@types/bn.js": "^4.11.5",
		"@types/jest": "^24.0.11",
		"@types/node": "^11.13.8",
		"bn.js": "^4.11.8",
		"ts-node": "^8.1.0",
		"tslint": "^5.16.0",
		"typescript": "^3.4.5"
	},
	"devDependencies": {
		"@babel/core": "^7.4.4",
		"@babel/preset-env": "^7.4.4",
		"@babel/preset-typescript": "^7.3.3",
		"babel-jest": "^24.7.1",
		"jest": "^24.7.1",
		"ts-jest": "^24.0.2",
		"types-bn": "0.0.1"
	}
}
